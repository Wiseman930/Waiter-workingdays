  margin: auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
}
.heads{
  background-color: #fca311;
  display:grid;
  grid-template-columns: 1fr 2fr 1fr;
}
.home{
  background-color: #e5e5e5;
